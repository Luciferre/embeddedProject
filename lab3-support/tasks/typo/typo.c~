 * Links to libc.
 */
#include <unistd.h>
#include <stdlib.h>

#define BLOCK 100

int main(int argc, char** argv)
{
	char buffer[BLOCK+1];
	int length;

	while(1){
		length = read(STDIN_FILENO, buffer, BLOCK);
		if(error == 0)
			exit(0);	
		else if(error <0)
			exit(1);
		else{
			for(i = 0; i < error; i++)
			{
				char tmp = caesar(buffer[i]);
				buffer[i] = tmp;
			}
			//buffer[i] = '\0';
			error =  write(STDOUT_FILENO, buffer, i+1);
		
			if(error < 0)
				exit(1);
			for(i = 0; i < BLOCK; i++)
				buffer[i] = '\0';
		}
	}
	return 0;
}
